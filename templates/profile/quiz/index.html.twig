{% extends 'profile/base.html.twig' %}

{% block title %}
    {{ contentTitle ?? '' }}
{% endblock %}

{% block contentTitle %}
    {{ contentTitle ?? '' }}
{% endblock %}

{% block contentHeader %}
    <h1 class="h2">Quizzes</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="{{ path('app_profile_quizzes_create') }}" class="btn btn-sm btn-primary">
            Create quiz
        </a>
    </div>
{% endblock %}

{% block body %}
    <div class="quizzes">
        <div class="table-responsive">
            <table class="table table-striped table-sm">
                <thead>
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Slug</th>
                    <th scope="col">Duration</th>
                    <th scope="col">Category</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for quiz in quizzes %}
                <tr>
                    <td>{{ quiz.title }}</td>
                    <td>{{ quiz.slug }}</td>
                    <td>{{ quiz.duration }}</td>
                    <td></td>
                    <td>
                        <a href="{{ path('app_profile_quizzes_edit', {'quiz': quiz.id}) }}" class="btn btn-primary">Edit</a>
                        <a href="{{ path('app_profile_quizzes_delete', {'quiz': quiz.id}) }}" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
