{% extends 'profile/base.html.twig' %}

{% block title %}
    {{ contentTitle ?? '' }}
{% endblock %}

{% block contentTitle %}
    {{ contentTitle ?? '' }}
{% endblock %}

{% block contentHeader %}
    <h1 class="h2">{{ quiz.title }}</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="{{ path('app_profile_quizzes_questions_create', {'quiz': quiz.id}) }}" class="btn btn-sm btn-primary">
            Add question
        </a>
    </div>
{% endblock %}

{% block body %}
    <div class="quizzes">
        <div class="table-responsive">
            <table class="table table-striped table-sm">
                <thead>
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Summary</th>
                    <th scope="col">Description</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for question in questions %}
                    <tr>
                        <td>{{ question.title }}</td>
                        <td>{{ question.summary }}</td>
                        <td>{{ question.description }}</td>
                        <td>
                            <a href="{{ path('app_profile_quizzes_questions_show', {'quiz': quiz.id, 'question':question.id}) }}" class="btn btn-primary">Show</a>
                            <a href="{{ path('app_profile_quizzes_questions_edit', {'quiz': quiz.id, 'question':question.id}) }}" class="btn btn-primary">Edit</a>
                            <a href="{{ path('app_profile_quizzes_questions_delete', {'quiz': quiz.id, 'question':question.id}) }}"
                               class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
