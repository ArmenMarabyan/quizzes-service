{% extends 'profile/base.html.twig' %}

{% block title %}
    {{ contentTitle ?? '' }}
{% endblock %}

{% block contentTitle %}
    {{ contentTitle ?? '' }}
{% endblock %}

{% block contentHeader %}
    <h1 class="h2">{{ question.title }}</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="{{ path('app_profile_quizzes_questions_answers_create', {'quiz': quiz.id, 'question': question.id}) }}" class="btn btn-sm btn-primary">
            Add answer
        </a>
    </div>
{% endblock %}

{% block body %}
    <div class="quizzes">
        <div class="table-responsive">
            <table class="table table-striped table-sm">
                <thead>
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Is true</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for answer in answers %}
                    <tr>
                        <td>{{ answer.title }}</td>
                        <td>{% if answer.isIsTrue() %} Yes {% else %} No {% endif %}</td>
                        <td>{{ answer.point }}</td>
                        <td>
                            <a href="{{ path('app_profile_quizzes_questions_answers_edit', {'quiz': quiz.id, 'question':question.id, 'answer': answer.id}) }}" class="btn btn-primary">Edit</a>
                            <a href="{{ path('app_profile_quizzes_questions_answers_delete', {'quiz': quiz.id, 'question':question.id, 'answer': answer.id}) }}"
                               class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
